---
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Startseite",
    links: [
      { text: "Startseite", url: "/" },
      { text: "Preise", url: "/preise" },
      { text: "Kontakt", url: "/kontakt" }
    ]
  },{
    title: "Leistungen",
    links: [
      { text: "Hausmeisterservice", url: "/hausmeister" },
      { text: "Umzugsservice", url: "/umzuege" },
      { text: "Kontakt", url: "/kontakt" },
      { text: "FAQ", url: "/faqs" },
    ]
  },
  {
    title: "Unternehmen",
    links: [
      { text: "Über uns", url: "/ueber-uns" },
      { text: "Karriere", url: "/karriere" },
      { text: "Kontakt", url: "/kontakt" },
      { text: "AGB", url: "/agb" },
      { text: "Datenschutz", url: "/datenschutz" },
      { text: "Impressum", url: "/impressum" }
